@model WasteManagementSystem.Models.WasteRequest

@{
    ViewBag.Title = "Delete Waste Request";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }

    h2 {
        text-align: center;
        margin-top: 20px;
        color: #dc3545;
        font-size: 28px;
        font-weight: bold;
    }

    .container {
        max-width: 600px;
        background: #fff;
        margin: 30px auto;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    h4 {
        color: #555;
        text-align: center;
        margin-bottom: 20px;
        font-weight: normal;
    }

    hr {
        border: none;
        height: 1px;
        background: #ddd;
        margin-bottom: 20px;
    }

    .dl-horizontal dt {
        font-weight: bold;
        color: #333;
        float: left;
        width: 120px;
        margin-right: 10px;
        clear: left;
    }

    .dl-horizontal dd {
        margin-left: 130px;
        color: #555;
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        text-decoration: none;
        cursor: pointer;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
        border: none;
    }

        .btn-danger:hover {
            background-color: #bd2130;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
        border: none;
        margin-left: 10px;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .btn-container {
        text-align: center;
        margin-top: 20px;
    }
</style>

<h2>Delete Waste Request</h2>

<div class="container">
    <h4>Are you sure you want to delete this waste request?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>UserID</dt>
        <dd>@Html.DisplayFor(model => model.UserID)</dd>

        <dt>Waste Type</dt>
        <dd>@Html.DisplayFor(model => model.WasteType)</dd>

        <dt>Location</dt>
        <dd>@Html.DisplayFor(model => model.Location)</dd>

        <dt>Status</dt>
        <dd>@Html.DisplayFor(model => model.Status)</dd>

        <dt>Request Date</dt>
        <dd>@Html.DisplayFor(model => model.RequestDate)</dd>
    </dl>

    <div class="btn-container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger">Delete</button>
        }
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
