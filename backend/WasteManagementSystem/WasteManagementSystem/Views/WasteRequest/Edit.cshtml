@model WasteManagementSystem.Models.WasteRequest

@{
    ViewBag.Title = "Edit Waste Request";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f9fafa;
        margin: 0;
        padding: 0;
    }

    h2 {
        text-align: center;
        margin-top: 20px;
        color: #007BFF;
        font-size: 28px;
        font-weight: bold;
    }

    .form-container {
        max-width: 700px;
        background: #fff;
        margin: 30px auto;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #333;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 5px;
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: #007BFF;
            outline: none;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.4);
        }

    .btn {
        padding: 10px 20px;
        font-size: 18px;
        font-weight: bold;
        color: #fff;
        background-color: #007BFF;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        padding: 10px 20px;
        font-size: 16px;
        color: #fff;
        background-color: #6c757d;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
        margin-top: 20px;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .text-danger {
        color: #dc3545;
        font-size: 14px;
    }

    .text-center {
        text-align: center;
    }
</style>

<h2>Edit Waste Request</h2>

<div class="form-container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.UserID)
            @Html.EditorFor(model => model.UserID, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter User ID" } })
            @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.WasteType)
            @Html.EditorFor(model => model.WasteType, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Waste Type" } })
            @Html.ValidationMessageFor(model => model.WasteType, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Location)
            @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Location" } })
            @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Status)
            @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Status (e.g., Pending, Completed)" } })
            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RequestDate)
            @Html.EditorFor(model => model.RequestDate, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Request Date" } })
            @Html.ValidationMessageFor(model => model.RequestDate, "", new { @class = "text-danger" })
        </div>

        <div class="form-group text-center">
            <button type="submit" class="btn">Save Changes</button>
        </div>
    }
</div>

<div class="text-center">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</div>
